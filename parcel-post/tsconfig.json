{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true
  },
  "smartStep": true,
  "skipFiles": [
    "<node_internals>/**/*.js"
  ],
  "outputCapture": "std",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}