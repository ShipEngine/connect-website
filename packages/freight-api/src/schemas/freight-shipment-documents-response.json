{
  "title": "FreightShipmentDocumentsResponse",
  "type": "object",
  "required": [
    "documents",
    "scac",
    "transaction_id"
  ],
  "properties": {
    "transaction_id": {
      "type": "string"
    },
    "scac": {
      "type": "string",
      "description": "The Standard Carrier Alpha Code developed by the NMFTA is used to identify a freight carrier within the transportation industry."
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "image",
          "format"
        ],
        "properties": {
          "type": {
            "type": "string",
            "title": "DocumentType",
            "enum": [
              "bill_of_lading",
              "delivery_receipt",
              "invoice",
              "weight_inspection_certificate"
            ]
          },
          "image": {
            "type": "string",
            "description": "Base64-encoded image of the document"
          },
          "format": {
            "type": "string",
            "title": "DocumentFormat",
            "enum": [
              "pdf"
            ]
          }
        }
      }
    }
  }
}
