{
  "title": "FreightQuoteResponse",
  "type": "object",
  "required": [
    "transaction_id",
    "scac",
    "carrier",
    "transit",
    "charges"
  ],
  "properties": {
    "transaction_id": {
      "type": "string"
    },
    "scac": {
      "type": "string",
      "description": "The Standard Carrier Alpha Code developed by the NMFTA is used to identify a freight carrier within the transportation industry."
    },
    "carrier": {
      "type": "object",
      "required": [
        "quote"
      ],
      "properties": {
        "quote": {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "effective": {
              "type": "object",
              "description": "Quote effective information if supported by the carrier",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date Format: YYYY-MM-DD"
                }
              }
            },
            "expiration": {
              "type": "object",
              "description": "Quote expiration information if supported by the carrier",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date Format: YYYY-MM-DD"
                }
              }
            }
          }
        },
        "message": {
          "type": "string",
          "description": "Optional message supplied by the carrier about the quote"
        }
      }
    },
    "transit": {
      "type": "object",
      "required": [
        "pickup",
        "delivery"
      ],
      "properties": {
        "pickup": {
          "type": "object",
          "required": [
            "date"
          ],
          "properties": {
            "date": {
              "type": "string",
              "format": "date",
              "description": "Date Format: YYYY-MM-DD"
            }
          }
        },
        "delivery": {
          "type": "object",
          "required": [
            "estimated"
          ],
          "properties": {
            "estimated": {
              "type": "object",
              "properties": {
                "days": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "charges": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Charge",
        "required": [
          "type",
          "amount"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "total",
              "discount",
              "accessorial",
              "container",
              "uncategorized"
            ]
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "object",
            "title": "Money",
            "description": "Represents a monetary value.",
            "required": [
              "value",
              "currency"
            ],
            "properties": {
              "value": {
                "type": "string",
                "description": "The amount of this value. Represented as a string to avoid floating point rounding issues. You must parse this string into a type appropriate for financial and monetary calculations."
              },
              "currency": {
                "type": "string",
                "description": "The currency of this value. Will be a three letter currency code defined by https://www.iban.com/currency-codes.html."
              }
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "required": [
        "code"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "carrier_description": {
          "type": "string"
        }
      }
    }
  }
}
